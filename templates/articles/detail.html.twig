{% extends 'base.html.twig' %}

{% block title %}Article : {{ article.title }}{% endblock %}

{% block body %}
    <h1>{{ article.title }}</h1>
    <p>Rédigé par : {{ article.user.firstname }} {{ article.user.lastname }} | Le : {{ article.createdAt | date('d-m-Y') }}</p>
    <p>{{ article.content }}</p>
    <a href="{{ path('app_articles') }}">Revenir en arrière</a>

    <h2>Commentaires :</h2>
    {% for com in comments  %}
        <h5>{{ com.user.firstname }} {{ com.user.lastname }}</h5>
        <p>Le : {{ com.createdAt | date('d-m-Y H:i') }}</p>
        <p>{{ com.content }}</p>
    {% endfor %}

    <h2>Ajout de commentaire :</h2>
    {{ form_start(commentsForm) }}
    {{ form_row(commentsForm.content) }}

    <button type="submit" class="btn">Post</button>
    {{ form_end(commentsForm) }}
{% endblock %}